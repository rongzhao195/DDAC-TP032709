<!DOCTYPE html>
<head>
    <meta charset="utf-8">

    <link href="~/Content/login-style.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <section id="content">



                <h1>Login Form</h1>
                @model WebApplication1.Models.LoginViewModel

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-2", Style = "float:left; text-transform: capitalize;" } )
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", Style = "float: right;" } })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" , Style = "float: right;" })
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2", Style = "float:left; text-transform: capitalize;" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", Style = "float: right;" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger", Style = "float: right;" })
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                                <input type="submit" value="Login" />			
                            <a href="#">Lost your password?</a>
				            <a href="#">Register</a>
                        </div>

                    </div>
                }
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </section><!-- content -->
        </div><!-- container -->



    </body>
    </html>
