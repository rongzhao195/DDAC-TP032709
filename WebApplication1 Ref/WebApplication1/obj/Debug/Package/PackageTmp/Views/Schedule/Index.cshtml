@model IEnumerable<WebApplication1.Models.Schedule>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>DASHGUM - Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

    <![endif]-->

    <script>
        function goSchedule() {
            window.location.href = "~/Views/Home/Index";
        }
        function goAbout() {
            window.location.href = "~/Views/Home/About";
        }
        function goContactUs() {
            window.location.href = "~/Views/Home/Contact";
        }


    </script>
</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        *********************************************************************************************************************************************************** -->
        <!-- **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">

                    <p class="centered"><a href="profile.html"><img src="../../assets/img/ui-sam.jpg" class="img-circle" width="60"></a></p>
                    <h5 class="centered">Maersk Line</h5>
    
                    <li class="sub-menu">
                        <a class="active" href="javascript:;">
                            <i class="fa fa-th"></i>
                            <span>Schedule</span>
                        </a>
                        <ul class="sub">
                            <li class="active"><a href="basic_table.html">Schedule</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a  href="javascript:goAbout();">
                            <i class="fa fa-th"></i>
                            <span>About </span>
                        </a>
                        <ul class="sub">
                            <li ><a href="../../View/Home/About.cshtml">About</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:goContactUs();">
                            <i class="fa fa-th"></i>
                            <span>Contact Us </span>
                        </a>
                        <ul class="sub">
                            <li><a href="../../View/Home/Contact.cshtml">About</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <h3> Schedule</h3>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-round btn-info" })

                <div class="row">

                </div><!-- /col-md-12 -->

                <div class="col-md-12 mt">
                    <div class="content-panel">
                        <table class="table table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.departure)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.destination)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.weight)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.deliver_date)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.departure)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.destination)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.weight)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.deliver_date)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div><! --/content-panel -->
                </div><!-- /col-md-12 -->
                </div><!-- row -->
                </div><!-- /row -->

            </section><! --/wrapper -->
        </section><!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2017 - Container Management System [Maersk Line]

                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->

    </section>


    <!-- js placed at the end of the document so the pages load faster -->
    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="assets/js/jquery.scrollTo.min.js"></script>
    <script src="assets/js/jquery.nicescroll.js" type="text/javascript"></script>


    <!--common script for all pages-->
    <script src="assets/js/common-scripts.js"></script>

    <!--script for this page-->

    <script>
      //custom select box



      $(function(){
          $('select.styled').customSelect();
      });

    </script>

</body>
</html>
